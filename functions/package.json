{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "predeploy": "yarn build:shared && yarn pack:shared && yarn add:file:shared",
    "deploy": "firebase deploy --only functions",
    "postdeploy": "rimraf shared-1.0.0.tgz && yarn add:link:shared",
    "logs": "firebase functions:log",
    "build:shared": "cd ../shared && yarn build",
    "pack:shared": "npm pack ../shared",
    "add:file:shared": "yarn add file:./shared-1.0.0.tgz",
    "add:link:shared": "yarn add link:../shared"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "lodash": "^4.17.21",
    "shared": "link:../shared"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "firebase-functions-test": "^0.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.0"
  },
  "private": true
}
