{
  "name": "functions",
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsc",
    "prestart": "rimraf lib",
    "start": "tsc -w",
    "logs": "firebase functions:log",
    "build:shared": "cd ../shared && yarn build",
    "cp:shared": "cpx '../shared/**' 'shared' -C",
    "rm:shared": "rimraf ./shared",
    "add:shared:link": "yarn add link:../shared",
    "add:shared:file": "yarn add file:./shared",
    "predeploy": "run-s build:shared cp:shared add:shared:file build",
    "postdeploy": "run-s rm:shared add:shared:link",
    "deploy": "firebase deploy --only functions"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "fs-extra": "^10.0.0",
    "lodash": "^4.17.21",
    "shared": "link:../shared"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cpx": "^1.5.0",
    "eslint": "^7.32.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "firebase-functions-test": "^0.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.0"
  },
  "private": true,
  "license": "MIT"
}
